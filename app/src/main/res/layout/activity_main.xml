<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uts_mprog_tifrp18cida_18111072_jiyaalpujiyanto.MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"

        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:adjustViewBounds="true"
        android:maxHeight="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/male"></ImageView>

    <ImageView
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/male"
        android:src="@drawable/female"
        android:adjustViewBounds="true"
        android:maxHeight="90dp"
        android:scaleType="fitCenter"

        ></ImageView>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Boundless Sky"
        android:layout_centerInParent="true"
        android:layout_below="@+id/male"
        android:textSize="20sp"
        android:textColor="@android:color/white"
         />

</RelativeLayout>